<h1>Listing document_person_maps</h1>

<table class="table sortable-theme-bootstrap" data-sortable>
  <thead>
    <tr>
      <th data-sorted="true">Document</th>
      <th>Person</th>
      <th>Rank</th>
      <th data-sortable="false">Actions</th>
    </tr>
  </thead>

  <tbody>
    <% @document_person_maps.each do |document_person_map| %>
      <tr>
        <td><%= document_person_map.document.id %></td>
        <td><%= document_person_map.person.id %></td>
        <td><%= document_person_map.rank %></td>
        <td>
          <%= link_to '[Show]', document_person_map %>
          <%= link_to '[Edit]', edit_document_person_map_path(document_person_map) %>
          <%= link_to '[Destroy]', document_person_map, method: :delete, data: { confirm: 'Are you sure?' } %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

