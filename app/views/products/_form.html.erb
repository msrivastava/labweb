<%= form_for(@product) do |f| %>
  <% if @product.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@product.errors.count, "error") %> prohibited this product from being saved:</h2>

      <ul>
      <% @product.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <table class="table-condensed lw-table">
  <tbody>
  <tr><td>
  <div class="field">
    <%= f.label :product_category_id, "Product Category:" %>&nbsp;&nbsp;
    <%= f.select("product_category_id", ProductCategory.all.collect{|pc| [ pc.name, pc.id ] }, {include_blank: 'None'})%>
  </div>
  </td></tr>
  <tr><td>
  <div class="field">
    <%= f.label :main_research_area_id, "Main Research Area:" %>&nbsp;&nbsp;
	<%= f.select("main_research_area_id", ResearchArea.all.collect{|ra| [ ra.name, ra.id ] }, {include_blank: 'None'})%>
  </div>
  </td></tr>
  <tr><td>
  <div class="field">
    <%= f.label :ispublic, "Is this product publicly released?" %>&nbsp;&nbsp;
    <%= f.check_box :ispublic %>
  </div>
  </td></tr>
  <tr><td>
  <div class="field">
    <%= f.label :islabproduct, "Is this product created at #{ENV["LABACRONYM"]}"%>&nbsp;&nbsp;
    <%= f.check_box :islabproduct %>
  </div>
  </td></tr>
  <tr><td>
  <div class="field">
    <%= f.label :title %><br>
    <%= f.text_field :title, size: 100 %>
  </div>
  </td></tr>
  <tr><td>
  <div class="field">
    <%= f.label :description %><br>
    <%= f.text_area :description, size: "103x10" %>
  </div>
  </td></tr>
  <tr><td>
  <div class="field">
    <%= f.label :year %><br>
    <%= f.number_field :year %>
  </div>
  </td></tr>
  <tr><td>
  <div class="field">
    <%= f.label :month %><br>
    <%= f.number_field :month %>
  </div>
  </td></tr>
  <tr><td>
  <div class="field">
    <%= f.label :url, "URL" %><br>
    <%= f.text_field :url, size: 100 %>
  </div>
  </td></tr>
  <tr><td>
  <div class="field">
    <%= f.label :miscattributes, "Miscellaneous Attributes (e.g 'a=>1,b=>2')" %><br>
    <%= f.text_field :miscattributes, size: 100 %>
  </div>
  </td></tr>
  <tr><td>
  <div class="actions">
    <%= f.submit %>
  </div>
  </div>
  </td></tr>
  </tbody>
  </table>
<% end %>
